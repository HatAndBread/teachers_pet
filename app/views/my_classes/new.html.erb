<%if @error
  @error.each do |k, v|
    v.each do |message|%>
      <p><%=message%></p>
    <%end
  end
end%>

<h1>Create a new class</h1>

<%= form_with model: [@user, user.my_classes.build], local: true, id: 'class_name_form' do |form| %>
  <p>
    <%= form.label :my_class_title %><br>
    <%= form.text_field :my_class_title, id: 'class_name_input' %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= javascript_pack_tag 'my_classes/new' %>